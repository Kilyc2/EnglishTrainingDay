<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>EtdVersionServlet</servlet-name>
        <servlet-class>com.android.tfc.englishtrainingday.services.EtdVersionService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LessonsServlet</servlet-name>
        <servlet-class>com.android.tfc.englishtrainingday.services.LessonsService</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExercisesServlet</servlet-name>
        <servlet-class>com.android.tfc.englishtrainingday.services.ExercisesService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EtdVersionServlet</servlet-name>
        <url-pattern>/etd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LessonsServlet</servlet-name>
        <url-pattern>/lessons</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExercisesServlet</servlet-name>
        <url-pattern>/exercises</url-pattern>
    </servlet-mapping>
</web-app>